<p style="color:red"><strong>{{error}}</strong></p>

{{#if payload}}
    <h1>Listado de Productos</h1>
    <ul>
    {{#each payload}}
        <li>
                Nombre: {{this.title}} | Precio: {{this.price}}
            <form action="/api/carts/64dad1b2610d7dac7dd8c7bf/products/{{this._id}}" method="post">
                <button type="submit" class="addToCart" onclick="addToCart(event, '{{this._id}}')">Agregar al carrito</button>
            </form>          
        </li>    {{/each}}
    </ul>

    {{#if hasPrevPage}}
        <a href={{prevLink}}>Anterior</a>
    {{/if}}

    {{page}}

    {{#if hasNextPage}}
        <a href={{nextLink}}>Siguiente</a>
    {{/if}}
{{else}}
    <h2>No hay productos</h2>
{{/if}}

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/js/products.js"></script>